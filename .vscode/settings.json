{
  "[python]": {
    "editor.defaultFormatter": "ms-python.black-formatter",
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.organizeImports": "always"
    },
  },
  "black-formatter.args": [
    "--line-length=130"
  ],
  "isort.args": [
    "--profile",
    "black"
  ],
  "flake8.args": [
    "--max-line-length=130"
  ],
  "python.analysis.typeCheckingMode": "basic"
}